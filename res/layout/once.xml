<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/oncenew">

    

    <Button
        android:id="@+id/adddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:background="@drawable/adddate" />

    <TextView
        android:id="@+id/setdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/adddate"
        android:layout_alignBottom="@+id/adddate"
        android:layout_toRightOf="@+id/adddate"
        android:background="@drawable/edittextrest"
      
        android:inputType="date"
        android:hint="Set Date"/>

    <TextView
        android:id="@+id/settime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addtime"
        android:layout_alignBottom="@+id/addtime"
        android:layout_toRightOf="@+id/addtime"
         android:background="@drawable/edittextrest"
        android:hint="Set Time" />

    <Button
        android:id="@+id/addtime"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/setdate"
        android:layout_alignBottom="@+id/setdate"
        android:layout_toRightOf="@+id/setdate"
        android:background="@drawable/addtime" />

</RelativeLayout>
